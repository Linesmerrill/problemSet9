extends ../layout

block content
  h1 Albumz
  a(href='/albumz/new')
    p New Album
  form(method='POST' action='/albumz')
    input(type='text' placeholder='Album' name='album')
    input(type='text' placeholder='Artist' name='artist')
    input(type='text' placeholder='Genre' name='genre')
    br
    input(type='submit' value='Search' id='searchBtn')
  form(method='GET' action='/albumz')
    input(type='submit' value='Reset' id='resetBtn')
  table
    thead
      tr
        td Genre
        td Artist
        td Album
    tbody
      for album in albums
        tr(class='albumsList')
          td= album.genre
          td(id="artist")= album.artist
          td: a(href='/albumz/' + album._id + "/edit" id="editLink")= album.album
